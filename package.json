{
  "name": "webpack4-starter-kit",
  "version": "1.0.2",
  "description": "Webpack 4 starter kit",
  "main": "./src/index.js",
  "scripts": {
    "dev": "node ./config/dev",
    "build": "node ./config/prod",
    "format:scss": "prettier --write \"src/**/*.scss\" && stylelint \"src/**/*.scss\" --fix --config ./.stylelintrc-format",
    "format:js": "eslint --fix \"src/**/*.js\"",
    "lint:scss": "stylelint \"src/**/*.scss\" --config ./.stylelintrc-format",
    "lint:js": "eslint \"src/**/*.js\"",
    "lint": "npm-run-all lint:*",
    "format": "npm-run-all format:*",
    "lint-staged": "lint-staged",
    "postinstall": "find node_modules -name '*.info' -exec rm -f {} \\;"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "src/**/*.js": [
        "eslint --fix",
        "git add"
      ],
      "./src/**/*.scss": [
        "prettier --write",
        "stylelint --fix --config ./.stylelintrc-format",
        "git add"
      ]
    }
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.1",
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "7.3.1",
    "autoprefixer": "9.4.7",
    "babel-eslint": "10.0.1",
    "babel-loader": "8.0.5",
    "browser-sync": "2.26.3",
    "browser-sync-webpack-plugin": "2.2.2",
    "chalk": "2.4.2",
    "copy-webpack-plugin": "4.6.0",
    "css-loader": "2.1.0",
    "eslint": "5.12.1",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-loader": "2.1.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-prettier": "^3.0.1",
    "file-loader": "3.0.1",
    "fs-extra": "^7.0.1",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "http-server": "0.11.1",
    "husky": "1.3.1",
    "imagemin": "6.1.0",
    "imagemin-gifsicle": "6.0.1",
    "imagemin-mozjpeg": "8.0.0",
    "imagemin-optipng": "6.0.0",
    "imagemin-svgo": "7.0.0",
    "img-loader": "3.0.1",
    "js-yaml": "^3.12.2",
    "lint-staged": "8.1.1",
    "mini-css-extract-plugin": "0.5.0",
    "mkdirp": "^0.5.1",
    "node-sass": "4.11.0",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "5.0.1",
    "ora": "3.0.0",
    "path": "^0.12.7",
    "postcss-loader": "3.0.0",
    "prettier": "^1.16.3",
    "resolve-url-loader": "3.0.0",
    "sass-loader": "7.1.0",
    "style-loader": "0.23.1",
    "stylelint": "9.10.1",
    "stylelint-at-rule-no-children": "^0.3.1",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-declaration-block-no-ignored-properties": "^1.1.0",
    "stylelint-order": "^2.0.0",
    "stylelint-scss": "^3.5.1",
    "stylelint-webpack-plugin": "0.10.5",
    "webpack": "4.29.0",
    "webpack-cli": "3.2.1",
    "webpack-entry-plus": "^1.0.15",
    "webpack-merge": "4.2.1"
  },
  "dependencies": {
    "@babel/runtime": "7.3.1",
    "normalize.css": "8.0.1",
    "smoothscroll-polyfill": "0.4.3"
  }
}
